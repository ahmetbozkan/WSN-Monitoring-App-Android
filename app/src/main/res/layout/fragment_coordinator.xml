<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.coordinator.CoordinatorFragment">

    <data>

        <variable
            name="viewModel"
            type="com.intalalab.wsnmonitoring.ui.coordinator.CoordinatorViewModel" />
    </data>

    <com.intalalab.wsnmonitoring.cv.CustomConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:isVisible="@{viewModel.isLoading()}">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_coordinator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/row_coordinator_item"
            android:padding="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </com.intalalab.wsnmonitoring.cv.CustomConstraintLayout>
</layout>