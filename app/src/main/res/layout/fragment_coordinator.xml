<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.coordinator.CoordinatorFragment">

    <data>

        <variable
            name="viewModel"
            type="com.intalalab.wsnmonitoring.ui.coordinator.CoordinatorViewModel" />
    </data>

    <com.intalalab.wsnmonitoring.cv.CustomConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:isVisible="@{viewModel.isLoading()}">

        <com.intalalab.wsnmonitoring.cv.CustomToolBarWithSearch
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isSearchGone="true"
            app:layout_constraintTop_toTopOf="parent"
            app:toolbarTitle="COORDINATORS" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_coordinator"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            tools:listitem="@layout/row_coordinator_item" />

    </com.intalalab.wsnmonitoring.cv.CustomConstraintLayout>
</layout>